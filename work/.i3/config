set $MENU "[S]hutdown    [R]eboot    Sus[P]end    [L]ock "
bindsym Menu mode $MENU
mode $MENU {
	bindsym s exec systemctl halt
	bindsym p exec systemctl suspend
	bindsym r exec systemctl reboot 
	bindsym l exec gnome-screensaver-command -l, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

set $SOUNDMENU "[J]Volume Down   [K]Volume Up   [L]Mute Unmute"
bindsym $mod+Shift+m mode $SOUNDMENU
mode $SOUNDMENU {
	bindsym j exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ '-5%'
	bindsym k exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ '+5%'
	bindsym l exec /usr/bin/pactl set-sink-mute @DEFAULT_SINK@ toggle
	bindsym Escape mode "default"
	bindsym Return mode "default"
}
set $TERMMENU "[1]Regular [2]ramis [3]productionapi [4]test-pc [5]local-devel [6]nautilus"
bindsym $mod+t mode $TERMMENU
mode $TERMMENU {
	bindsym 1 exec export theme=default && gnome-terminal, mode "default"
	bindsym 2 exec export theme=ramis && gnome-terminal, mode "default"
	bindsym 3 exec export theme=api && gnome-terminal, mode "default"
	bindsym 4 exec export theme=test-server && gnome-terminal, mode "default"
	bindsym 5 exec export theme=local-devel && gnome-terminal, mode "default"
	bindsym 6 exec nautilus --no-desktop , mode "default"
	bindsym Escape mode "default"
	bindsym Return mode "default"
}
