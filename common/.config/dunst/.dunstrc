[global]
    font = Cousine 13 
	allow_markup = yes


    format = "<b>%a: %s</b>\n %b"
    sort = yes
    indicate_hidden = yes
    alignment = left 
    bounce_freq = 00 
    show_age_threshold = 60;

    word_wrap = yes

    geometry = "300x5-30+20"
    transparency = 0

    idle_threshold = 20

    monitor = 0
    follow = none

    sticky_history = yes
    line_height = 0
    separator_height = 2;

    separator_color = auto
    padding = 8 
    horizontal_padding = 8 


[urgency_low]
 background = "#a9a9a9"
    foreground = "#FFFFFF"
    timeout = 5

[urgency_normal]
    background = "#a9a9a9"
    foreground = "#FFFFFF"
    timeout = 5

[urgency_critical]
    background = "#ff0000"
    foreground = "#ffffff"
    timeout = 10
[ignore]
    appname = "Spotify"
    summary = "*"
    format = ""
